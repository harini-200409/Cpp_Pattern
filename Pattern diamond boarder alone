#include <iostream>
using namespace std;

int main() {
    int n,i,j,k;
    cin >> n;
    for (i = 0; i < n; i++) 
    {
        for (j = 0; j < n - i - 1; j++) 
        {
            cout << " ";
        }
        for (k = 0; k <= i; k++) 
        {
           if(k==0)
            cout << "* ";
            else
            cout<<" ";
            if(k==i-1)
            cout<<"* ";
            else
            cout<<" ";
        }
        cout << endl;
    }
    for (int i = n - 2; i >= 0; i--) 
    {
        for (int j = 0; j < n - i - 1; j++) 
        {
            cout << " ";
        }
        for (int k = 0; k <= i; k++) 
        {
            if(k==0)
            cout << "* ";
            else
            cout<<" ";
            if(k==i-1)
            cout<<"* ";
            else
            cout<<" ";
        }
        cout << endl;
    }

    return 0;
}
