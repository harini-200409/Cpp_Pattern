#include <iostream>
using namespace std;
int main()
{
    int n;
    cin>>n;
    for(int i=0;i<=n;i++)
    {
        cout<<"*";
        for(int j=1;j<=i;j++)
        {
            cout<<j;
        }
        for(int k=i-1;k>=1;k--)
        {
            cout<<k;
        }
        if(i!=0)
        cout<<"*";
        cout<<endl;
    }
    for(int i=n-1;i>=0;i--)
    {
        cout<<"*";
        for(int j=1;j<=i;j++)
        {
            cout<<j;
        }
        for(int k=i-1;k>=1;k--)
        {
            cout<<k;
        }
        if(i!=0)
        cout<<"*";
        cout<<endl;
    }
    
    return 0;
}
